{
    // Formatarea codului cu Black
    "python.formatting.provider": "black",              // Folosește Black pentru formatarea automată
    "editor.formatOnSave": true,                        // Activează formatarea automată la salvare
    "python.formatting.blackArgs": [
        "--line-length", "88"                           // Setează lungimea maximă a liniei la 88 caractere
    ],

    // Linting (verificarea stilului și erorilor)
    "python.linting.enabled": true,                     // Activează linting-ul
    "python.linting.pylintEnabled": true,               // Activează pylint pentru verificarea stilului și erorilor
    "python.linting.flake8Enabled": true,               // Activează flake8 pentru verificarea PEP 8

    // Argumente suplimentare pentru pylint și flake8
    "python.linting.pylintArgs": [
        "--max-line-length=88"                          // Setează pylint să respecte lungimea liniei de 88
    ],
    "python.linting.flake8Args": [
        "--max-line-length=88"                          // Setează flake8 să respecte lungimea liniei de 88
    ],

    // IntelliSense (Completare automată)
    "python.jediEnabled": false,                        // Dezactivează Jedi (poți să-l activezi dacă preferi)
    "python.analysis.typeCheckingMode": "basic",        // Activează verificarea de tipuri (folosind Pylance)
    
    // Setarea căii către mediul virtual
    "python.pythonPath": "venv\\Scripts\\python.exe",   // Setează calea către mediul virtual (modifică pentru sistemul tău)

    // Ruler în editor (pentru a vedea limitele liniei)
    "editor.rulers": [79],                              // Adaugă o linie verticală la 79 caractere

    // Formatarea codului în funcție de stilul PEP 8
    "editor.formatOnType": true,                        // Formatează automat codul când tastezi

    // Dezactivează comportamente iritante
    "python.linting.mypyEnabled": false,                // Dezactivează MyPy dacă nu folosești tipare stricte

    // Alte setări utile pentru confortul în editor
    "editor.wordWrap": "on",                            // Activează împachetarea automată a liniilor lungi
    "editor.snippetSuggestions": "top",                 // Prioritizează sugestiile de snippet-uri
    "python.autoComplete.addBrackets": true,            // Adaugă automat paranteze la completarea funcțiilor
}
